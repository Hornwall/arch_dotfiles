# Audio controlls
bindsym XF86AudioRaiseVolume exec amixer set 'Master' 5%+ unmute
bindsym XF86AudioLowerVolume exec amixer set 'Master' 5%- unmute
bindsym XF86AudioMute exec amixer set 'Master' toggle

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 10 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# No title bars
new_window none

# gaps config
gaps outer 4
gaps inner 8
smart_gaps on

# Turn on compton
exec --no-startup-id compton --opengl --vsync opengl-swc --paint-on-overlay --xrender-sync --xrender-sync-fence
exec 1pass
# Set wallpaper
exec_always sh ~/.fehbg &

# Turn on polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Turn of HDMI monitor
exec xrandr --output HDMI-0 --off
